# DMARC Analyzer Configuration

# Directory containing html templates
DMARC_HTML_TEMPLATE_DIR=./templates

# Default report template html file
DMARC_DEFAULT_HTML_TEMPLATE=report.html

# Directory containing DMARC report ZIP files
DMARC_REPORTS_DIR=./reports

# Output path for the HTML report
DMARC_OUTPUT_PATH=./dmarc-report.html

# Sort ZIP files by timestamp extracted from filename (true/false)
DMARC_SORT_BY_TIMESTAMP=true

# Enable DNS lookups for record parsing
DMARC_ENABLE_DNS_LOOKUPS=true
